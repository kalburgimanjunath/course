<div id="customer-overview" class="row accountcontainer customer hide account-view" data-bind="busyIndicator: {show: IsLoading, blockAll: true}">
    <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9 overview">
        <h3 class="isppagetitle">Overview<span class="ispicon ispicon_schedule pull-right hide"></span></h3>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 content scroll-x scroll-y">
            <div class="row">
                <div class="col-md-4 hide">
                    <div class="panel panel-info white accountdetails ">
                        <div class="panel-heading">
                            <h3 class="panel-title">ACCOUNT DETAILS </h3>
                            @*<span class="pull-right clickable"><i class="glyphicon glyphicon-chevron-up"></i></span>*@
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-6">
                                    Account#<br />
                                    <b>KO24652467</b>
                                </div>
                                <div class="col-md-6">
                                    Last Registered<br />
                                    <b>May 04, 2016</b>
                                </div>
                            </div>
                            <div class="row hide">
                                EULA Acceptance<br />
                                <button>AWAITING ACCEPTANCE</button><br />
                                <a href="#">Resend Registration Email</a>
                            </div>
                            <div class="row hide">
                                Account Status<br />
                                <button>ACCEPTED</button><br />
                                May 03, 2016 9:24 AM</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 hide">
                    <div class="panel panel-info white">
                        <div class="panel-heading">
                            <h3 class="panel-title">ACCOUNT REVENUE</h3>
                            @*<span class="pull-right clickable"><i class="glyphicon glyphicon-chevron-up"></i></span>*@
                        </div>
                        <div class="panel-body">Panel content</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="panel panel-info white">
                        <div class="panel-heading">
                            <h3 class="panel-title">ACCOUNT DETAILS</h3>
                            @*<span class="pull-right clickable"><i class="glyphicon glyphicon-chevron-up"></i></span>*@
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="row">
                                    Customer<br />
                                    <b data-bind="text: $data.siteDetailModel.CustomerInfo.Name"></b>
                                </div>
                            </div>

                            <hr />
                            <div class="row">
                                <div class="row">
                                    Site<br />
                                    <b data-bind="text: $data.siteDetailModel.SiteInfo.Name"></b>
                                </div>

                            </div>
                            <div class="row">
                                <div class="row" data-bind="if: $data.siteDetailModel.SiteInfo.hasFeature('SiteReferenceNo')">
                                    Site Reference No.<br />
                                    <b data-bind="text: $data.siteDetailModel.SiteInfo.getFeature('SiteReferenceNo').Value"></b>
                                </div>
                            </div>
                            <p>
                                <b>Address</b><br />
                                <span data-bind="text: $data.siteDetailModel.SiteInfo.ContactInfo.AddressLine1"></span><br />
                                <span data-bind="text:$data.siteDetailModel.SiteInfo.ContactInfo.City"> </span>
                                <span data-bind="text:$data.siteDetailModel.SiteInfo.ContactInfo.Region"></span>
                                <span data-bind="text:$data.siteDetailModel.SiteInfo.ContactInfo.ZipCode"></span><br />
                                <span data-bind="text: $data.siteDetailModel.SiteInfo.ContactInfo.Country"></span>
                            </p>
                            <hr />
                           
                            <p>
                                <b>Site Admin</b><br/>
                                <b>
                                    <span data-bind="text: $data.siteDetailModel.PrimaryOperatorInfo.FirstName"></span>
                                    <span data-bind="text: $data.siteDetailModel.PrimaryOperatorInfo.LastName"></span>
                                </b><br />
                                @Resources.Cell : <span data-bind="text: $data.siteDetailModel.PrimaryOperatorInfo.ContactInfo.MobileNumber"></span><br />
                                @Resources.Office : <span data-bind="text: $data.siteDetailModel.PrimaryOperatorInfo.ContactInfo.WorkPhone"></span><br />
                               <a data-bind="text: $data.siteDetailModel.PrimaryOperatorInfo.ContactInfo.EmailAddress"> </a>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="panel panel-info white">
                        <div class="panel-heading">
                            <h3 class="panel-title">CONTROLLER DETAILS</h3>
                            @*<span class="pull-right clickable"><i class="glyphicon glyphicon-chevron-up"></i></span>*@
                        </div>
                        <div class="panel-body">

                            <p>
                                No Controller found<br />
                                <button type="button" class="btn btn-primary text-center" data-toggle="modal" href='#modal-id-site' data-bind="click: $data.addController">Add Controller</button>
                            </p>



                        </div>
                    </div>
                </div>
                <div class="col-md-4 hide">
                    <div class="panel panel-info white">
                        <div class="panel-heading">
                            <h3 class="panel-title">SERVICE APPOINTMENTS</h3>
                            @*<span class="pull-right clickable"><i class="glyphicon glyphicon-chevron-up"></i></span>*@
                        </div>
                        <div class="panel-body">Panel content</div>
                    </div>
                </div>
                <div class="col-md-4 hide">
                    <div class="panel panel-info white">
                        <div class="panel-heading">
                            <h3 class="panel-title">SERVICE APPOINTMENTS</h3>
                            @*<span class="pull-right clickable"><i class="glyphicon glyphicon-chevron-up"></i></span>*@
                        </div>
                        <div class="panel-body">Panel content</div>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>